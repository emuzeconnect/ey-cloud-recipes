<%= @environment %>:
  sessions:
    default:
      database: <%=@mongo_replsetname%>
      <% if @replica_set -%>
      replica_set:
        hosts:
          <% @hosts.each do |host, port| -%>
            - <%= host %>:<%= port %>
          <% end -%> 
      <% else -%>
      hosts:
        <% @hosts.each do |host, port| -%>
          - <%= host %>:<%= port %>
        <% end -%>
      <% end -%>
